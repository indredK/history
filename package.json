{
  "name": "chinese-historical-panorama",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "cd frontend && bun run dev",
    "build": "cd frontend && bun run build",
    "preview": "cd frontend && bun run preview",
    "lint": "cd frontend && bun run lint",
    "lint:fix": "cd frontend && bun run lint:fix",
    "type-check": "cd frontend && bun run type-check",
    "install:all": "bun install && cd frontend && bun install && cd ../backend && bun install",
    "clean": "rm -rf frontend/dist frontend/node_modules backend/node_modules node_modules",
    "clean:install": "bun run clean && bun run install:all"
  },
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=20.19.0",
    "bun": ">=1.3.0"
  }
}
